@model BikeShop.Models.Customer

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Customer</h4>
    <hr />
    
    <div class="card">

        <div class="card-body">

            <p>
                <b>UserName:</b> @Model.UserName
            </p>
            <p>
                <b>Password:</b> @(new String('*', Model.Password.Length))
            </p>
            <p>
                <b>FullName:</b> @Model.FullName
            </p>
            <p>
                <b>Address:</b> @Model.Address
            </p>
            <p>
                <b>Phone:</b> @Model.Phone
            </p>
            
        </div>

    </div>

</div>
<div class="mt-3">
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.UserName">Edit</a>
    <a class="btn btn-success" asp-action="Index">Back to List</a>
</div>
