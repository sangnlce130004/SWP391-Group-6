@model BikeShop.Models.Customer

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Customer</h4>
    <hr />

    <div class="card">

        <div class="card-body">

            <p>
                <b>UserName:</b> @Model.UserName
            </p>
            <p>
                <b>Password:</b> @(new String('*', Model.Password.Length))
            </p>
            <p>
                <b>FullName:</b> @Model.FullName
            </p>
            <p>
                <b>Address:</b> @Model.Address
            </p>
            <p>
                <b>Phone:</b> @Model.Phone
            </p>
            
        </div>

    </div>
    
    <form class="mt-3" asp-action="Delete">
        <input type="hidden" asp-for="UserName" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a class="btn btn-success" asp-action="Index">Back to List</a>
    </form>
</div>
